{
  "name": "shaddy",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rimraf node_modules .turbo apps/*/node_modules packages/*/node_modules",
    "clean:cache": "rimraf .turbo apps/*/.next apps/*/.turbo packages/*/.turbo"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=20"
  },
  "engineStrict": true
}
