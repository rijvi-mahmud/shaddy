{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL",
    "APP_URL",
    "WEB3FORMS_ACCESS_KEY"
  ],
  "tasks": {
    "start": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!apps/web/src/registry/index.ts",
        "!apps/web/src/registry/registry-*.ts",
        "!apps/web/src/registry/schema.ts"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "apps/web/src/registry/index.ts",
        "apps/web/src/registry/registry-*.ts",
        "apps/web/src/registry/schema.ts"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:run": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
